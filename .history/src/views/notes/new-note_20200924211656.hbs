<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card text-center">
            <div class="card-header">
                <h3>New Note</h3>
            </div>
            <div class="card-body">
                <form action="/notes/new-note" class="form" method="post">
                    <div class="form-group">
                        <input type="text" name="title" placeholder="Título" value="" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <textarea type="text" name="description" placeholder="Descripción" value="" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>