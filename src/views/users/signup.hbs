<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card text-center">
            <div class="card-header">
                <h3>signup form</h3>
            </div>
            <div class="card-body">
                <form action="/users/signup" method="post">
                    <div class="form-group">
                        <input type="text" name="email" placeholder="Email" value="{{email}}" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="name" placeholder="Nombre" value="{{name}}" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Password" value="{{password}}" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="password" name="confirm_password" placeholder="Confirm Password" value="{{confirm_password}}" class="form-control">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">SignUp</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>